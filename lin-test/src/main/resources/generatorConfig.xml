<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <properties resource="generator.properties"></properties>
    <context id="MysqlContext" targetRuntime="Mybatis3" defaultModelType="flat">
        <property name="javaFileEncoding" value="UTF-8"/>
        <!--beginningDelimiter默认值endingDelmiter默认值修改-->
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelmiter" value="`"/>
        <!--toString-->
        <plugin type="org.mybatis.generator.plugins.ToStringPlugin"/>
        <!--序列化-->
        <plugin type="com.lin.plugin.SerializablePlugin">
            <property name="supressJavaInterface" value="false"/>
        </plugin>
        <!--缓存-->
        <plugin type="org.mybatis.generator.plugins.CachePlugin">
            <property name="cache_type" value="org.mybatis.caches.ehcache.LoggingEhcache"/>
        </plugin>
        <!--生成equals和hashCode-->
        <plugin type="org.mybatis.generator.plugins.EqualsHashCodePlugin"/>
        <!--z注释的使用-->
        <commentGenerator type="com.lin.plugin.CommentGenerator">
            <property name="supressAllComments" value="true"/>
            <property name="supressDate" value="true"/>
        </commentGenerator>
        <!--数据连接池-->
        <jdbcConnection driverClass="${generator.jdbc.driver}" connectionURL="${generator.jdbc.url}"
                        password="${generator.jdbc.password}" userId="${generator.jdbc.username}"/>
        <!--model-->
        <javaModelGenerator targetPackage="com.lin.upms.model"
                            targetProject="/Users/linxiaobin/IdeaProjects/practice/lin-test/src/main/java"></javaModelGenerator>
        <!--xml-->
        <sqlMapGenerator targetPackage="com.lin.upms.dao.mapper"
                         targetProject="/Users/linxiaobin/IdeaProjects/practice/lin-test/src/main/java"></sqlMapGenerator>
        <!--mapper接口-->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.lin.upms.dao.mapper"
                             targetProject="/Users/linxiaobin/IdeaProjects/practice/lin-test/src/main/java"></javaClientGenerator>
        <table tableName="upms_log" domainObjectName="UpmsLog"/>
        <table tableName="upms_organization" domainObjectName="UpmsOrganization"/>
        <table tableName="upms_permission" domainObjectName="UpmsPermission"/>
        <table tableName="upms_role" domainObjectName="UpmsRole"/>
        <table tableName="upms_role_permission" domainObjectName="UpmsRolePermission"/>
        <table tableName="upms_system" domainObjectName="UpmsSystem"/>
        <table tableName="upms_user" domainObjectName="UpmsUser">
            <generatedKey column="user_id" sqlStatement="MySql"
                          identity="true"/>
        </table>
        <table tableName="upms_user_organization" domainObjectName="UpmsUserOrganization"/>
        <table tableName="upms_user_permission" domainObjectName="UpmsUserPermission"/>
        <table tableName="upms_user_role" domainObjectName="UpmsUserRole"/>
    </context>
</generatorConfiguration>